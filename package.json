{
  "name": "tdd",
  "version": "1.0.0",
  "description": "TDD examples",
  "type": "module",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trofima/tdd-examples.git"
  },
  "scripts": {
    "test": "mocha -u tdd --timeout 10000 --colors src/**/*.spec.js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "chai": "^4.3.6",
    "eslint": "^8.26.0",
    "mocha": "^10.0.0"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "browser": true,
      "node": true,
      "mocha": true,
      "es2022": true
    },
    "ignorePatterns": ["playground/dist/**/*"],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 13
    },
    "rules": {
      "quotes": ["warn", "single"],
      "semi": ["warn", "never"],
      "no-trailing-spaces": ["warn"],
      "no-unused-vars": ["warn"]
    }
  }
}
